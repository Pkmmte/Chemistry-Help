<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#CC33B5E5"
                android:endColor="#CC33B5E5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="#0F58A7" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#8833B5E5"
                android:startColor="#8833B5E5"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="#0F58A7" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="#FF000000"
                android:startColor="#FF000000"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="#0F58A7" />
        </shape>
    </item>
</selector>
